@model Assignment2Data.Animal.Animals

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Animals</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Animal ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniId)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniName)
        </dd>
        <dt class = "col-sm-2">
            Species
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniType)
        </dd>
        <dt class = "col-sm-2">
            Breed
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniBreed)
        </dd>
        <dt class = "col-sm-2">
            Date Of Birth
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniDoB)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniDesc)
        </dd>
        <dt class = "col-sm-2">
            Picture
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(modelItem => modelItem.AniPic)" alt="Picture Not Found" width="200" height="200" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
