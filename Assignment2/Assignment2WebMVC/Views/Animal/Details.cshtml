@model Assignment2Data.Animal.Animals

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Animals</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Animal ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniId)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniName)
        </dd>
        <dt class = "col-sm-2">
            Species
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniType)
        </dd>
        <dt class = "col-sm-2">
            Breed
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniBreed)
        </dd>
        <dt class = "col-sm-2">
            Date Of Birth
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniDoB)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AniDesc)
        </dd>
        <dt class = "col-sm-2">
            Picture
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.AniPic)" alt="Picture Not Found" width="200" height="200" />
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AniId }) |
    <a asp-action="Index">Back to List</a>
</div>
